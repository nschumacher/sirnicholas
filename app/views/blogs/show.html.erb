<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @blog.body %>
</p>

<p>
  <strong>Status:</strong>
  <%= @blog.status.capitalize %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @blog.topic.title %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @blog.tag_list %>
</p>

<%= image_tag blog_img(@blog.thumb_image, 'thumb'), width: '200px' %>
<%= image_tag blog_img(@blog.main_image, 'main') %>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
