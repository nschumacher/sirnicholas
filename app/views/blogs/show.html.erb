<%= image_tag blog_img(@blog.main_image_url, 'main'), width: '100%' %>
<br>
<%= image_tag blog_img(@blog.thumb_image_url, 'thumb'), width: '200px' %>
<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @blog.topic.title %>
</p>

<nav aria-label="breadcrumb">
    <span class="pull-right">
        <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) if logged_in?(:site_admin) %>
        <%= link_to fa_icon('trash'), @blog, method: :destroy, data: { confirm: 'Are you sure you want to delete this post?' } if logged_in?(:site_admin) %>
    </span>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'The Round Table', blogs_path %></li>
        <li class="breadcrumb-item"><%= link_to @blog.topic.title, topic_path(@blog.topic)%></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @blog.title %></li>
    </ol>  
</nav>

<p>
  <strong>Body:</strong>
  <%= markdown @blog.body %>
</p>

<p>
  <strong>Status:</strong>
  <%= @blog.status.capitalize %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @blog.tag_list %>
</p>

<!-- comment form -->
<%= render 'comments/comment_form' %>


<!-- comment section -->
<div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
</div>


<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
