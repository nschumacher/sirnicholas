<%= form_with(model: blog, local: true) do |form| %>
    <% if blog.errors.any? %>
        <% blog.errors.full_messages.each do |error| %>
            <%= alert_generator error, 'error' %>
        <% end %>
    <% end %>
  
    <div class="field">
      <%= form.text_field :title, placeholder:'Title' %>
    </div>
  
    <div class="field">
      <%= form.text_area :body, placeholder:'Body', rows: 30, style: "width:100%;" %>
    </div>
  
    <div class="field">
      <%= form.label :topic_id %>
      <%= form.collection_select(:topic_id, Topic.all, :id, :title,
                                {
                                  include_blank: true
                                },
                                class: 'form-control'
                              )
      %>
    </div>
  
    <div class="form-group">
      <%= form.radio_button :status, 'draft' %>
      <%= form.label :status, 'Draft' %>
  
      <%= form.radio_button :status, 'published' %>
      <%= form.label :status, 'Published' %>
    </div>
    
    <div class="field">
      <%= form.label :tags %>
      <%= form.text_field :tag_list, value: form.object.tag_list.to_s %>
    </div>
  
    <div class="field">
      <label class="btn btn-primary">
        Upload Thumbnail <%= form.file_field :thumb_image, style: 'display:none;' %>
      </label>
    </div>
    <div class="field">
      <label class="btn btn-primary">
        Upload Banner <%= form.file_field :main_image, style: 'display:none;' %>
      </label>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  