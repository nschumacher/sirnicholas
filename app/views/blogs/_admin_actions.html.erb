<% if logged_in?(:site_admin) %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page"><%= link_to fa_icon('file-text'), toggle_status_blog_path(blog), style: blog_status_color(blog) %></li>
            <li class="breadcrumb-item active" aria-current="page"><%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog) if logged_in?(:site_admin) %></li>
            <li class="breadcrumb-item active" aria-current="page"><%= link_to fa_icon('trash'), blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></li>
        </ol> 
    </nav>
<% end %>