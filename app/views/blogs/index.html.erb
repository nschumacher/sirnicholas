            <div style='height:100%; display:inline-block;'>&nbsp;</div>
            <div class="align-bottom" style="display:inline">
                <%= link_to icon('fa-regular', 'plus', style:'font-size:40px;'), new_blog_path if logged_in?(:site_admin) %>
            </div>
        </div>
    </div>
  </div>

  <div class="row mb-2">
    <div class="container px-4">
        <div class="row shadow-sm">
            <%= render @blogs %>
        </div>
        <%= paginate @blogs %>
    </div>
    
