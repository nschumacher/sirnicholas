<% unless current_user.is_a? GuestUser %>
    <%= form_for @comment, url: '#' do |f| %>
        <div class="form-group">
            <%= f.label 'Add a comment', style: 'color: #AD974F' %>
            <%= f.text_area :content, class: 'form-control' %>
        </div>

        <%= f.submit 'Post Comment', class: 'nav-link btn btn-primary', style: 'margin-top: 10px;' %>
    <% end %>
<% end %>
<% if current_user.is_a? GuestUser %>
    <div class="gold-text">
        Please feel free to <%= link_to "Register", new_user_registration_path, class: 'soft-white-text' %> an account or <%= link_to "Login", new_user_session_path, class: 'soft-white-text' %> so you can leave a comment below!
    </div>
<% end %>